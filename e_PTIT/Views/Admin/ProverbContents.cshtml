@model IEnumerable<e_PTIT.Models.ProverbContent>

@{
    ViewBag.Title = "ProverbContents";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h3 style="padding-top:10px;">Proverb Contents</h3>
<h4>
    @Html.ActionLink("Create New", "NewProverbContent")
</h4> 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fkProverbId)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.pageNumber)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.pageName)
        </th>  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fkProverbId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pageNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pageName)
        </td>      
        <td>
            @Html.ActionLink("Edit", "EditProverbContent", new { id=item.pkProverbPageId })  
        </td>
    </tr>
}

</table>
