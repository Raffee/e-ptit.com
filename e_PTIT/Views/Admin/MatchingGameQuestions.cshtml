@model IEnumerable<e_PTIT.Models.MatchingGameQuestion>

@{
    ViewBag.Title = "MatchingGameQuestions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>MatchingGameQuestions</h2>

<p>
    @Html.ActionLink("Create New", "NewMatchingGameQuestion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionHTML)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fkMatchGameId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionHTML)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fkMatchGameId)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMatchingGameQuestion", new { id = item.pkMatchGameQuestionID })
        </td>
    </tr>
}

</table>
