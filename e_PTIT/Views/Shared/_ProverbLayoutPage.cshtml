                        </li>
                        <li class="violette">
                            <div class="divViolette">
                                <span class="LeftSpanVioletteMenu"><img src="~/images/menuButton/violeteLeft.jpg" /></span>
                                <a href="#" class="VioletteMenuLink">Ժպիտներ</a>
                                <span class="RightSpanVioletteMenu"><img src="~/images/menuButton/violeteRight.jpg" /></span>
                            </div>
                        </li>

                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div style="margin-top:110px;">
            @RenderBody()
        </div>
        <div class='row footer'>
            <div class='col-md-12 col-sm-12 col-xs-12'>

                <div class="footerImage center72 text-center">
                    <img src="~/images/footer/Website_Ptit_5-footer-png24.png" />
                </div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
