<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ՓԹԻԹ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="ProverbsBG">
    <nav class="navbar navbar-custom navbar-fixed-top whiteBackground72">
        <div class="masterHeadar72">
            <div class="col-md-12 col-sm-12 col-xs-12 vCenterContainer72">
                <div class="center72 text-center">
                    <img src="~/images/header/aylKhager.jpg" />
                </div>
            </div>
        </div>
        <div class=" container-fluid" style="border-top:5px solid #CCCCCC;">
            <div class="container" style=" margin-top:-5px;">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*<a class="navbar-brands" href="/Home/Index"> ՓԹԻԹ</a>*@
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="orange">
